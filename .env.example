# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID
# Your personal chat ID or group chat ID where notifications will be sent
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# SSH Keys Page Authentication (Optional - required only if using /keys page)
KEYS_PAGE_PASSWORD=your_strong_password

# MFA Configuration (Optional - generate via /keys/setup-mfa)
# Visit /keys/setup-mfa after setting KEYS_PAGE_PASSWORD to generate this
# Scan the QR code with Google Authenticator, Authy, or any TOTP app
TOTP_SECRET=your_totp_secret_base32_here

# SSH Keys (Optional)
# Format: JSON array with name, type (private/public), and key content
SSH_KEYS='[
  {
    "name": "key-name-1",
    "type": "private",
    "key": "-----BEGIN RSA PRIVATE KEY-----your_key_here-----END RSA PRIVATE KEY-----"
  },
  {
    "name": "key-name-2",
    "type": "public",
    "key": "ssh-rsa your_key_here example@example.com"
  }
]'

# Primary Domain (Optional)
# Used for canonical URLs and SEO
PRIMARY_DOMAIN=https://shaxa.dev
